<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Publisher Page</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Publisher Page</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/addPublisher">Add new publisher</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Publisher Details</h2></div>
        <br>
        <% if (publishers) { %> <!-- Check if product data exists -->
            <div>
                <p><b>Name:</b><br> <%= publishers.name %></p>
                <p><b>Address:</b><br> <img src = "/images/<%=publishers.image %>" width="20%"></p>
                <p><b>Country:</b><br> <%= publishers.country %></p>
                <p><b>Contact:</b><br> <%= publishers.contact %></p>
                <p><b>Images:</b><br> <%= publishers.images %></p>
            </div>
        <% } else { %>
            <p>No publisher found.</p>
        <% } %>
        <a href ="/">Back to home</a>
    </div>
    
</body>
</html>
